<%= form_for(@employee, url: @employee.new_record? ? admin_employees_path : admin_employee_path(@employee.id)) do |f| %>
  <div class="form-group col-md-3">
    <%= f.label :first_name, 'First name' %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :last_name, 'Last name' %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :email, 'Email' %>
    <%= f.text_field :email, class: "form-control" %>
  </div>

  <div class="form-group col-md-3">
    <%= f.label :password, 'Password' %>
    <%= f.text_field :password, type: :password, class: "form-control" %>
  </div>

  <div class="form-group col-md-3 mb-3">
    <%= f.label :role, 'Role' %>
    <%= f.select :role, [['Admin', 1], ['Cook', 2], ['Waiter', 3]], {}, {class: "form-control"} %>
  </div>
  <%= f.button 'Salvar', class: 'btn btn-primary' %>
<% end %>
