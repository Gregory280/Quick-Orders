<div class="navbar navbar-light navbar-expand bg-gray shadow mb-4 pt-3 pb-3 topbar static-top">
  <div class="container-fluid">
    <h2 class="mb-0"><strong><%= @user.name %></strong></h2>
    <ul class="navbar-nav flex-nowrap ms-auto">
      <li class="nav-item mx-1">
        <%= link_to '<i class="fa-solid fa-arrow-left"></i>'.html_safe, users_path, class: "btn btn-secondary text-white icons-margin"  %>
      </li>
      <li class="nav-item mx-1">
        <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_user_path(@user),class: "btn btn-secondary icons-margin" %>
      </li>
      <li>
        <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, @user, class: "btn btn-danger ", 
                        method: :delete, data: { confirm: 'Tem certeza?' } if can? :destroy, User %>
      </li>
    </ul>
  </div>
</div>

<div class="container">
  <p class="h4 p-2">
    <%= User.human_attribute_name(:email) %>:<span class="p-2"><%= @user.email %></span>
  </p>
  <hr>
  <div class="p-2">
    <p class="h4 d-inline"><strong><%= User.human_attribute_name(:role) %>:</strong>
      <span class="fw-light lh-base"><%= @user.role_name %></span>
    </p>
  </div>
</div>