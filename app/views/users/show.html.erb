<div class="container py-3 h-100">
  <div class="card bg-dark shadow">
    <div class="card-header ">
      <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
          <h2 class="text-lighter"><%= User.human_attribute_name(:first_name) %> <strong><%= @user.name %></strong></h2>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="d-flex justify-content-end">
            <%= link_to '<i class="fa-solid fa-arrow-left"></i>'.html_safe, users_path, class: "btn btn-secondary text-white icons-margin"  %>
            <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_user_path(@user),class: "btn btn-secondary icons-margin" %>
            <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, @user, class: "btn btn-danger ", 
                        method: :delete, data: { confirm: 'Tem certeza?' } if can? :destroy, User %>
          </div>
        </div>
      </div>
    </div>
    <div class="card-body">
      <p class="lead">
        <strong><%= User.human_attribute_name(:email) %>:</strong> <%= @user.email %>
      </p>
      <hr class="divisor">
      <p class="lead">
        <strong><%= User.human_attribute_name(:role) %>: </strong> <%= @user.role_name %>
      </p>
    </div>
  </div>
  </div>
</div>



