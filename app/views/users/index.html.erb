<div class="card bg-dark border-light">
    <div class="card-header">
        <h3>FUNCIONARIOS CADASTRADOS</h3>
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6">
                <%= link_to 'NOVO FUNCIONARIO', new_user_path, class: "btn btn-secondary" %>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6">
              <div class="d-flex justify-content-end">
                <%= search do %>
                  <%= render 'search' %>
                <% end %>
              </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                    <th>ID</th>
                    <th><%= User.human_attribute_name(:email) %></th>
                    <th><%= User.human_attribute_name(:first_name) %></th>
                    <th><%= User.human_attribute_name(:role) %></th>
                    <th class="text-center">EDITAR/DELETAR</th>
                    </tr>
                </thead>

                <tbody>
                    <% @users.each do |user| %>
                    <tr>
                        <td><%= user.id %></td>
                        <td><%= user.email %></td>
                        <td><%= user.first_name.capitalize %> <%= user.last_name.capitalize %></td>
                        <td><%= user.role_name %></td>
                        <td class="text-center">
                        <%= link_to '<i class="fa-solid fa-search"></i>'.html_safe, user, class: "btn btn-info" %>
                        <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_user_path(user), class: "btn btn-secondary" %>
                        <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, user, class: "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza?' } %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

    </div>
    <div class="card-footer">

    </div>
</div>
