<div class="container py-5 h-100">
  <div class="card bg-dark shadow">
    <div class="card-header bg-dark m-3 p-3">
      
      <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
          <h3 class="d-inline-block">Quadro de Funcionários</h3>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="d-flex justify-content-end">
            <%= link_to '<i class="fa-solid fa-plus"></i>'.html_safe, new_user_path, class: "btn btn-secondary icons-margin " %>
            <%= search do %>
              <%= render 'search' %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-dark table-striped">
          <thead class="">
            <tr>
              <th class="text-center">ID</th>
              <th class="text-center"><%= User.human_attribute_name(:email) %></th>
              <th class="text-center"><%= User.human_attribute_name(:first_name) %></th>
              <th class="text-center"><%= User.human_attribute_name(:role) %></th>
              <th class="text-center">REMOVIDO</th>
              <th class="text-center">OPÇÕES</th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
                <td class="text-center"><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.first_name.capitalize %> <%= user.last_name.capitalize %></td>
                <td class="text-center"><%= user.role_name %></td>
                <td class="text-center"><%= user.discarded? ? '<i class="fas fa-check-double"></i>'.html_safe : '' %></td>
                <td class="text-center">
                  <%= link_to '<i class="fa-solid fa-eye"></i>'.html_safe, user, class: "btn btn-secondary icons-margin" %>
                  <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_user_path(user), class: "btn btn-secondary icons-margin" %>
                  <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, user, class: "btn btn-danger icons-margin", method: :delete, data: { confirm: 'Tem certeza?' } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
        
    </div>
    
  </div>
</div>











   