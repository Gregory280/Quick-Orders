<%= form_with(model: user) do |f| %>

  <div class="form-group">
    <%= f.label I18n.t 'c.first_name' %><br />
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label I18n.t 'c.last_name' %><br />
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label I18n.t 'c.role' %><br />
    <%= f.select :role, options_for_select(User.roles.map {|key, value| [key.titleize, User.roles.key(value)]}, @user.role), {} , class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :password, "Senha" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres minimos)</em>
    <% end %><br />
    <%= f.password_field :password, {autocomplete: "password", class: "form-control"} %>
  </div>
  <br>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmar Senha" %><br />
    <%= f.password_field :password_confirmation, { autocomplete: "password", class: "form-control" }%>
  </div>
  <br>
  <div class="form-group">
    <%= f.submit "Registrar" , class: "btn btn-secondary" %> <%= link_to "Voltar", users_path, class: "btn btn-warning" %>
  </div>
    
<% end %>
