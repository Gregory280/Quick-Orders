<div class="container py-3 h-100">
  <div class="card bg-dark shadow">
    <div class="card-header ">
      <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
          <h2 class="text-lighter">Produto: <strong><%= @product.name %></strong></h2>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="d-flex justify-content-end">
          <%= link_to '<i class="fa-solid fa-arrow-left"></i>'.html_safe, products_path, class: "btn btn-secondary text-white icons-margin"  %>
            <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_product_path(@product),class: "btn btn-secondary" %>
            
          </div>
        </div>
      </div>

      
    </div>
    <div class="card-body">
      <p class="font-size-info">
        Preço: <strong>R$ <%= @product.price %> </strong>
      </p>
      <hr class="divisor">
      <p class="lead">
        Descrição: <%= @product.description %>
      </p>
      <hr class="divisor">
      <p class="lead">
        Categoria: <span class="badge rounded-pill bg-light text-dark"><%= @product.category.title %></span>
      </p>
    </div>

  </div>
</div>
