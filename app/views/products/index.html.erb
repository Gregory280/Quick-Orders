<div class="card bg-dark border-light">
    <div class="card-header">
        <h3>PRODUTOS CADASTRADOS</h3>

        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-6">
                <%= link_to 'NOVO PRODUCTO', new_product_path, class: "btn btn-secondary" %>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-6">
              <div class="d-flex justify-content-end">
                <%= search do %>
                  <%= render 'search' %>
                <% end %>
              </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                    <th>ID</th>
                    <th>NOME</th>
                    <th>DESCRIÇÃO</th>
                    <th>CATEGORIA</th>
                    <th class="text-center">EDITAR/DELETAR</th>
                    </tr>
                </thead>

                <tbody>
                    <% @products.each do |product| %>
                    <tr>
                        <td><%= product.id %></td>
                        <td><%= product.name %></td>
                        <td><%= product.description %></td>
                        <td><%= product.category.title if product.category.present? %></td>
                        <td class="text-center">
                        <%= link_to '<i class="fa-solid fa-search"></i>'.html_safe, product, class: "btn btn-info" %>
                        <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_product_path(product), class: "btn btn-secondary" %>
                        <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, product, class: "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza?' } %>
                        </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>

    </div>
    <div class="card-footer">

    </div>
</div>
