<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th><%= Order.human_attribute_name(:client_name) %></th>
      <th><%= Order.human_attribute_name(:table) %></th>
      <th><%= Order.human_attribute_name(:user) %></th>
      <th><%= Order.human_attribute_name(:status) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.client_name %></td>
        <td><%= order.table %></td>
        <td><%= order.user_id %></td>
        <td><span class="badge <%= status_klass(order.status) %>"><%= order.status_name %></span></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

