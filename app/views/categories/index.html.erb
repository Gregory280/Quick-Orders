<div class="card bg-dark border-light">
  <div class="card-header">
    <h3>CATEGORIAS CADASTRADAS</h3>
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-6">
        <%= link_to 'NOVA CATEGORIA', new_category_path, class: "btn btn-secondary" %>
      </div>
      <div class="col-sm-12 col-md-12 col-lg-6">
        <div class="d-flex justify-content-end">
          <%= search do %>
            <%= render 'search' %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
  <div class="card-body">
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th><%= Category.human_attribute_name(:title) %></th>
          <th class="text-center">EDITAR/DELETAR</th>
          <% if current_user.admin? %>
            <th class="text-center">DELETADO</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.id %></td>
            <td><%= category.title %></td>
            <td class="text-center">
              <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_category_path(category), class: "btn btn-secondary" %>
              <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, category, class: "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza?' } %>
            </td>
            <td class="text-center"><%= category.discarded? ? '<i class="fas fa-check-double"></i>'.html_safe : '' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">

  </div>
</div>
