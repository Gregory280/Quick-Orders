<div class="container py-5 h-100">
  <div class="card bg-dark shadow">
    <div class="card-header bg-dark m-3 p-3">
      
      <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
          <h3 class="d-inline-block">Listagem de Categorias</h3>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
          <div class="d-flex justify-content-end">
            <%= link_to '<i class="fa-solid fa-plus"></i>'.html_safe, new_category_path, class: "btn btn-secondary icons-margin " %>

            <%= search do %>
              <%= render 'search' %>
            <% end %>
          </div>
        </div>
      </div>

    </div>
    <div class="card-body">
      <table class="table table-dark table-striped">
        <thead class="text-center align-middle">
          <tr>
            <th>ID</th>
            <th><%= Category.human_attribute_name(:title).upcase %></th>
            <th>Quant. Produtos</th>
          </tr>
        </thead>

        <tbody class="text-center align-middle">
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.id %></td>
              <td><%= category.title %></td>
              <td><%= category.products.count %></td>
              <td class="d-flex justify-content-end text-center">
                <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_category_path(category), class: "btn btn-secondary icons-margin" %>
                <%= link_to '<i class="fa-solid fa-trash"></i>'.html_safe, category, class: "btn btn-danger", method: :delete, data: { confirm: 'Tem certeza?' } %>
              </td>
              <td class="text-center"><%= category.discarded? ? '<i class="fas fa-check-double"></i>'.html_safe : '' %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
  </div>
</div>

