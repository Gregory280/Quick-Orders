<div class="container py-5 h-100">
  <div class="card bg-dark shadow">
    <div class="card-header bg-dark m-3 p-3">
      
      <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
          <h3 class="d-inline-block">Quadro de Comandas</h3>
        </div>
      </div>

    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-dark table-striped">
          <thead>
            <tr>
              <th class="text-center"><%= Order.human_attribute_name(:client_name).upcase %></th>
              <th class="text-center"><%= Order.human_attribute_name(:table.upcase) %></th>
              <th class="text-center"><%= Order.human_attribute_name(:user).upcase %></th>
              <th class="text-center"><%= Order.human_attribute_name(:status).upcase %></th>
              <th class="text-center">OPÇÕES</th>
            </tr>
          </thead>

          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.client_name %></td>
                <td class="text-center"><%= order.table %></td>
                <td><%= order.user.try(:first_name) %></td>
                <td class="text-center"><span class="badge <%= status_klass(order.status) %>"><%= order.status_name %></span></td>
                <td class="text-center">
                  <%= link_to 'Ver', kitchen_view_order_path(order.id), class: 'btn btn-primary' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
        
    </div>
    
  </div>
</div>

