<div class="navbar navbar-light navbar-expand bg-gray shadow mb-4 pt-3 pb-3 topbar static-top">
  <div class="container-fluid">
    <h2 class="mb-0">Quadro de Comandas</h2>
  </div>
</div>
<div class="table-responsive">
  <table class="table bg-gray-darker text-white table-borderless">
    <thead>
      <tr>
        <th><%= Order.human_attribute_name(:client_name) %></th>
        <th><%= Order.human_attribute_name(:table) %></th>
        <th><%= Order.human_attribute_name(:user) %></th>
        <th><%= Order.human_attribute_name(:status) %></th>
        <th class="text-center d-none d-sm-block">Opções</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.client_name %></td>
          <td><%= order.table %></td>
          <td><%= order.user.try(:first_name) %></td>
          <td><span class="badge <%= status_klass(order.status) %>"><%= order.status_name %></span></td>
          <td class="text-center">
            <%= link_to 'Ver', kitchen_view_order_path(order.id), class: 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

